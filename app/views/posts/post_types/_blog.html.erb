<h2><%= bulletin_name params[:bulletin_id] %> <small><%= link_to '설정', edit_bulletin_path(params[:bulletin_id])%></small></h2>

<% @posts.each do | post | %>
    <div class='post'>
      <td><%= post.title %> <small>( <%= post.comments.size %> )</small></td>
      <div class='content'><%= simple_format post.content %></div>
      <div>
          <%= link_to '미리보기', [post.bulletin, post], class:'btn btn-default' %>
          <%= link_to '수정하기', edit_bulletin_post_path(post.bulletin, post), class:'btn btn-default' %>
          <%= link_to '삭제하기', [post.bulletin, post], method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default' %>
      </div>
    </div>
<% end %>

<br>

<%= link_to '글쓰기', new_bulletin_post_path, class: 'btn btn-default' %>

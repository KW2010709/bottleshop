<h2><%= bulletin_name params[:bulletin_id] %> <small><%= link_to '설정', edit_bulletin_path(params[:bulletin_id])%></small></h2>

<table class="table">
  <thead>
    <tr>
      <th>글 제목</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %> </td>
        <td>
          <%= link_to '글 보기' , [post.bulletin, post], class:'btn btn-default' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to '글쓰기', new_bulletin_post_path, class: 'btn btn-default' %>

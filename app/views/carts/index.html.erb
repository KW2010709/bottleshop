<p id="notice"><%= notice %></p>

<h1>장바구니 목록</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= link_to '목록 보기', cart %></td>
        <td><%= link_to '목록 편집', edit_cart_path(cart) %></td>
        <td><%= link_to '목록 삭제', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '새 장바구니', new_cart_path %>

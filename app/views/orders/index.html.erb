<p id="notice"><%= notice %></p>

<h1>주문 목록</h1>

<table>
  <thead>
    <tr>
      <th>이름</th>
      <th>주소</th>
      <th>Email</th>
      <th>결제 선택</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to '주문 보기', order %></td>
        <td><%= link_to '주문 편집', edit_order_path(order) %></td>
        <td><%= link_to '주문 삭제', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


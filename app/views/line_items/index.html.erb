<h1>Listing line_items</h1>

<table>
  <thead>
    <tr>
      <th>상품</th>
      <th>장바구니</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product %></td>
        <td><%= line_item.cart %></td>
        <td><%= link_to '보기', line_item %></td>
        <td><%= link_to '편집', edit_line_item_path(line_item) %></td>
        <td><%= link_to '삭제하기', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

